<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:id = "@+id/seller_nav"
	app:startDestination = "@id/myProductsFragment">

	<fragment
		android:id = "@+id/myProductsFragment"
		android:name = "com.github.abusaeed_shuvo.techtrader.ui.dashboard.seller.product.MyProductsFragment"
		android:label = "Products"
		tools:layout = "@layout/fragment_my_products" />
	<fragment
		android:id = "@+id/sellerProfileFragment"
		android:name = "com.github.abusaeed_shuvo.techtrader.ui.dashboard.seller.profile.SellerProfileFragment"
		android:label = "Profile"
		tools:layout = "@layout/fragment_seller_profile" />
	<fragment
		android:id = "@+id/uploadProductFragment"
		android:name = "com.github.abusaeed_shuvo.techtrader.ui.dashboard.seller.upload.UploadProductFragment"
		android:label = "Upload Product"
		tools:layout = "@layout/fragment_upload_product" />
	<fragment
		android:id = "@+id/chatListFragment"
		android:name = "com.github.abusaeed_shuvo.techtrader.ui.dashboard.message.chat_list.ChatListFragment"
		android:label = "Messages"
		tools:layout = "@layout/fragment_chat_list">
		<action
			android:id = "@+id/action_chatListFragment_to_messageListFragment"
			app:destination = "@id/messageListFragment" />
	</fragment>
	<fragment
		android:id = "@+id/messageListFragment"
		android:name = "com.github.abusaeed_shuvo.techtrader.ui.dashboard.message.message_list.MessageListFragment"
		android:label = "Chat Message"
		tools:layout = "@layout/fragment_message_list">
		<argument
			android:name = "conversationId"
			app:argType = "string" />
	</fragment>
</navigation>
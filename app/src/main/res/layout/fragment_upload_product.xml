<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	tools:context = ".ui.dashboard.seller.upload.UploadProductFragment">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:padding = "@dimen/_8sdp">

		<!-- Product Image -->
		<ImageView
			android:id = "@+id/iv_product"
			android:layout_width = "0dp"
			android:layout_height = "@dimen/_150sdp"
			android:contentDescription = "Product image"
			android:src = "@drawable/ic_image_upload"
			app:layout_constraintTop_toTopOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent" />

		<!-- Product Name -->
		<com.google.android.material.textfield.TextInputLayout
			android:id = "@+id/input_product_name"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:hint = "Name:"
			app:layout_constraintTop_toBottomOf = "@id/iv_product"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent"
			android:layout_marginTop = "@dimen/_8sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:inputType = "textCapSentences"
				android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Product Description -->
		<com.google.android.material.textfield.TextInputLayout
			android:id = "@+id/input_product_description"
			android:layout_width = "0dp"
			android:layout_height = "@dimen/_150sdp"
			android:hint = "Description:"
			app:layout_constraintTop_toBottomOf = "@id/input_product_name"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent"
			android:layout_marginTop = "@dimen/_8sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:inputType = "textMultiLine"
				android:textAlignment = "viewStart"
				android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Price -->
		<com.google.android.material.textfield.TextInputLayout
			android:id = "@+id/input_product_price"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:hint = "Price:"
			app:layout_constraintTop_toBottomOf = "@id/input_product_description"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toStartOf = "@id/input_product_quantity"
			android:layout_marginTop = "@dimen/_8sdp"
			android:layout_marginEnd = "@dimen/_4sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:inputType = "numberDecimal"
				android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Quantity -->
		<com.google.android.material.textfield.TextInputLayout
			android:id = "@+id/input_product_quantity"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:hint = "Quantity:"
			app:layout_constraintTop_toTopOf = "@id/input_product_price"
			app:layout_constraintBottom_toBottomOf = "@id/input_product_price"
			app:layout_constraintStart_toEndOf = "@id/input_product_price"
			app:layout_constraintEnd_toEndOf = "parent"
			android:layout_marginStart = "@dimen/_4sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:inputType = "number"
				android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Upload Button -->
		<com.google.android.material.button.MaterialButton
			android:id = "@+id/btn_add_product"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_marginTop = "@dimen/_8sdp"
			android:layout_marginBottom = "@dimen/_8sdp"
			android:text = "Upload Product"
			app:layout_constraintTop_toBottomOf = "@id/input_product_price"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
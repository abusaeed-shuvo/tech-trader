<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:orientation = "vertical">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width = "match_parent"
		android:padding = "@dimen/_2sdp"
		android:layout_height = "wrap_content">


		<com.google.android.material.imageview.ShapeableImageView
			android:id = "@+id/product_image"
			android:layout_width = "@dimen/_100sdp"
			android:layout_height = "@dimen/_100sdp"
			android:scaleType = "centerCrop"
			android:src = "@drawable/image_placeholder"
			app:layout_constraintBottom_toBottomOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintTop_toTopOf = "parent" />

		<LinearLayout
			android:layout_width = "0dp"
			android:layout_height = "0dp"
			android:id = "@+id/details"
			android:orientation = "vertical"
			app:layout_constraintBottom_toTopOf = "@id/action_btn_cont"
			app:layout_constraintEnd_toEndOf = "parent"
			app:layout_constraintStart_toEndOf = "@id/product_image"
			app:layout_constraintTop_toTopOf = "parent">

			<TextView
				android:id = "@+id/product_name"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:ellipsize = "end"
				android:maxLines = "2"
				android:textAlignment = "viewStart"
				android:textAppearance = "@style/TextAppearance.Material3.TitleMedium.Emphasized"
				tools:text = "Product NAme" />

			<com.google.android.material.divider.MaterialDivider
				android:layout_width = "match_parent"
				android:layout_height = "@dimen/_2sdp" />

			<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:gravity = "center"
				android:orientation = "horizontal">

				<LinearLayout
					android:layout_width = "0dp"
					android:layout_weight = "1"
					android:layout_height = "wrap_content"
					android:layout_margin = "@dimen/_4sdp"
					android:gravity = "center"
					android:orientation = "vertical">

					<TextView
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text = "Price"
						android:textAppearance = "@style/TextAppearance.Material3.BodySmall" />

					<TextView
						android:id = "@+id/product_price"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						tools:text = "$20" />
				</LinearLayout>

				<LinearLayout
					android:layout_width = "0dp"
					android:layout_weight = "1"
					android:layout_height = "wrap_content"
					android:layout_margin = "@dimen/_4sdp"
					android:gravity = "center"
					android:orientation = "vertical">

					<TextView
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text = "Quantity"
						android:textAppearance = "@style/TextAppearance.Material3.BodySmall" />

					<TextView
						android:id = "@+id/product_quantity2"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						tools:text = "1" />
				</LinearLayout>

				<LinearLayout
					android:layout_width = "0dp"
					android:layout_weight = "1"
					android:layout_height = "wrap_content"
					android:layout_margin = "@dimen/_4sdp"
					android:gravity = "center"
					android:orientation = "vertical">

					<TextView
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text = "Total"
						android:textAppearance = "@style/TextAppearance.Material3.BodySmall" />

					<TextView
						android:id = "@+id/product_price_total"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text = "$20" />
				</LinearLayout>
			</LinearLayout>


		</LinearLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id = "@+id/action_btn_cont"
			android:layout_width = "0dp"
			android:layout_height = "match_parent"
			android:gravity = "center"
			android:orientation = "horizontal"
			app:layout_constraintStart_toEndOf = "@id/product_image"
			app:layout_constraintBottom_toBottomOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent"

			>

			<LinearLayout
				app:layout_constraintTop_toTopOf = "parent"
				app:layout_constraintBottom_toBottomOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:gravity = "center_vertical"
				android:layout_marginBottom = "@dimen/_8sdp"
				android:orientation = "horizontal">

				<ImageButton
					android:id = "@+id/btn_remove_product_item"
					android:layout_width = "@dimen/_36sdp"
					android:layout_height = "@dimen/_36sdp"
					android:backgroundTint = "#D50000"
					android:contentDescription = "remove item"
					android:src = "@drawable/ic_remove" />

				<TextView
					android:id = "@+id/product_quantity"
					android:layout_width = "@dimen/_36sdp"
					android:layout_height = "@dimen/_36sdp"
					android:text = "0"
					android:layout_gravity = "center"
					android:textAlignment = "center"
					android:textSize = "@dimen/_24ssp" />

				<ImageButton
					android:id = "@+id/btn_add_product_item"
					android:layout_width = "@dimen/_36sdp"
					android:layout_height = "@dimen/_36sdp"
					android:backgroundTint = "#00C853"
					android:contentDescription = "add item"
					android:src = "@drawable/ic_add" />


			</LinearLayout>

			<com.google.android.material.button.MaterialButton
				android:id = "@+id/btn_remove_item_from_cart"
				app:layout_constraintTop_toTopOf = "parent"
				app:layout_constraintBottom_toBottomOf = "parent"
				app:layout_constraintEnd_toEndOf = "parent"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_gravity = "bottom"
				android:backgroundTint = "#D50000"
				android:text = "Del"
				android:textColor = "@color/white" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>